<!-- ====== Features Section Start -->
<section class="pt-20 pb-8 lg:pt-[120px] lg:pb-[70px] dark:bg-dark" id="keunggulan-kami">
  <div class="container">
    <div class="-mx-4 flex flex-wrap">
      <div class="w-full px-4">
        <div class="mb-12 mx-auto max-w-[485px] lg:mb-[70px] text-center">
          <h2 class="mb-3 text-3xl font-bold text-primary dark:text-white sm:text-4xl md:text-[40px] md:leading-[1.2]">Keunggulan Kami</h2>
          <p class="text-base text-body-color dark:text-dark-6">
            Teknologi canggih, inovasi berkelanjutan, dan pelayanan pelanggan terbaik untuk desain kapal yang presisi dan sesuai standar internasional.
          </p>
        </div>
      </div>
    </div>
    <div class="-mx-4 flex flex-wrap justify-center">
      {
        features.map((feature) => (
          <div class="w-full px-4 md:w-1/2 lg:w-1/3 mb-6">
            <div class="wow fadeInUp group mb-12 text-center" data-wow-delay=".1s">
              <div class="flex justify-center">
                <div class="relative z-10 mb-10 flex h-[70px] w-[70px] items-center justify-center rounded-[14px] bg-secondary">
                  <span
                    class="absolute top-0 left-0 -z-[1] mb-8 flex h-[70px] w-[70px] rotate-[25deg] items-center justify-center rounded-[14px] bg-secondary bg-opacity-20 duration-300 group-hover:rotate-45"
                  ></span>
                  <img src={feature.icon} alt="icon" />
                </div>
              </div>
              <h4 class="mb-3 text-xl font-bold text-dark dark:text-white">
                {feature.title}
              </h4>
              <p class="mb-8 text-body-color dark:text-dark-6 lg:mb-9">
                {feature.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
<!-- ====== Features Section End -->